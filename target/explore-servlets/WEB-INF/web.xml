<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>HeaderServlet</servlet-name>
    <servlet-class>pl.hit.servlets.jsp.HeaderServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FooterServlet</servlet-name>
    <servlet-class>pl.hit.servlets.jsp.FooterServlet</servlet-class>
  </servlet>

  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/errors/400.html</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/WEB-INF/errors/401.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/errors/404.html</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/WEB-INF/errors/405.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/errors/500.html</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/WEB-INF/errors/503.html</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.NullPointerException</exception-type>
    <location>/WEB-INF/errors/java/npe.html</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.IllegalArgumentException</exception-type>
    <location>/WEB-INF/errors/java/iae.html</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/WEB-INF/errors/java/rte.html</location>
  </error-page>
  <error-page>
    <exception-type>java.io.IOException</exception-type>
    <location>/WEB-INF/errors/java/ioe.html</location>
  </error-page>
</web-app>





